version: "3.3"

services:
  cadvisor:
    image: google/cadvisor:v0.33.0
    command: -logtostderr -docker_only
    restart: always
    ports:
      - "9338:8080"
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock:ro
      - /:/rootfs:ro
      - /var/run:/var/run
      - /sys:/sys:ro
      - /var/lib/docker/:/var/lib/docker:ro
      - /dev/disk/:/dev/disk:ro
