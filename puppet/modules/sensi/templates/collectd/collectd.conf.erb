Hostname "linux"
FQDNLookup false

LoadPlugin cpu
LoadPlugin df
LoadPlugin interface
LoadPlugin network
LoadPlugin memory
LoadPlugin swap
LoadPlugin rrdtool
LoadPlugin processes
LoadPlugin disk
LoadPlugin cpufreq
LoadPlugin fhcount

<Plugin "disk">
  #Disk "/^sda/"
  #IgnoreSelected false
  
  Disk "/^loop\d+$/"
  Disk "/^dm-\d+$/"
  IgnoreSelected "true"
</Plugin>

<Plugin df>
    ReportInodes true
    # ignore rootfs; else, the root file-system would appear twice, causing
    # one of the updates to fail and spam the log
    FSType rootfs
    # ignore the usual virtual / temporary file-systems
    FSType sysfs
    FSType proc
    FSType devtmpfs
    FSType devpts
    FSType tmpfs
    FSType fusectl
    FSType cgroup
    IgnoreSelected true
</Plugin>

<Plugin interface>
    #Interface "/^usb/"
    #Interface "/^wlan/"
    #Interface "/^lo/"
    #Interface "/^eth/"
    #Interface "/^el/"
    #Interface "/^enp/"
    #IgnoreSelected false

    Interface "/^lo\d*$/"
    Interface "/^docker.*/"
    Interface "/^t(un|ap)\d*$/"
    Interface "/^veth.*$/"
    IgnoreSelected "true"
</Plugin>

<Plugin fhcount>
    ValuesAbsolute true
</Plugin>

<Plugin rrdtool>
	DataDir "/var/lib/collectd/rrd"
#	CacheTimeout 120
#	CacheFlush 900
#	WritesPerSecond 30
#	CreateFilesAsync false
#	RandomTimeout 0
#
# The following settings are rather advanced
# and should usually not be touched:
#	StepSize 10
#	HeartBeat 20
#	RRARows 1200
#	RRATimespan 158112000
#	XFF 0.1
</Plugin>

<% if @logstash_ip && @logstash_port %>
<Plugin network>
    <Server "<%= @logstash_ip %>" "<%= @logstash_port %>">
    </Server>
</Plugin>
<% end %>

<Include "/etc/collectd/collectd.conf.d">
	Filter "*.conf"
</Include>
